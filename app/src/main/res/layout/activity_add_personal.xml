<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_add_personal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wjx.xing.activitys.manager.AddPersonalActivity">

    <include layout="@layout/layout_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <View
                style="@style/View_line"
                android:layout_marginTop="12dp"
                />

            <TextView
                style="@style/text_view_style"
                android:text="姓名"
                />

            <EditText
                android:id="@+id/edit_personal_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nextFocusDown="@+id/tv_department_number"
                />

            <View
                style="@style/View_line"
                android:layout_marginTop="12dp"
                />

            <TextView
                style="@style/text_view_style"
                android:text="部门"
                />

            <Spinner
                android:id="@+id/spinner_personal_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <View
                style="@style/View_line"
                android:layout_marginTop="12dp"
                />

            <TextView
                style="@style/text_view_style"
                android:text="角色"
                />

            <Spinner
                android:id="@+id/spinner_personal_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <View
                style="@style/View_line"
                android:layout_marginTop="12dp"
                />

            <TextView
                style="@style/text_view_style"
                android:text="登陆密码"
                />

            <EditText
                android:id="@+id/edit_personal_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nextFocusDown="@+id/tv_department_number"
                />

            <View
                style="@style/View_line"
                android:layout_marginTop="12dp"
                />

            <TextView
                style="@style/text_view_style"
                android:text="性别"
                />

            <Spinner
                android:id="@+id/spinner_personal_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <View
                style="@style/View_line"
                android:layout_marginTop="12dp"
                />

            <TextView
                style="@style/text_view_style"
                android:text="邮箱"
                />

            <EditText
                android:id="@+id/edit_personal_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nextFocusDown="@+id/tv_department_number"
                />

            <View
                style="@style/View_line"
                android:layout_marginTop="12dp"
                />

            <TextView
                style="@style/text_view_style"
                android:text="最高学历"
                />

            <Spinner
                android:id="@+id/spinner_personal_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <View
                style="@style/View_line"
                android:layout_marginTop="12dp"
                />

            <TextView
                style="@style/text_view_style"
                android:text="职称技能"
                />

            <Spinner
                android:id="@+id/spinner_personal_skill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
