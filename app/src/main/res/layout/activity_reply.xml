<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_reply"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wjx.xing.activitys.manager.ReplyActivity">

    <include layout="@layout/layout_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <View
                style="@style/View_line"
                android:layout_marginTop="12dp"
                />

            <TextView
                style="@style/text_view_style"
                android:text="回复内容"
                />

            <Spinner
                android:id="@+id/spinner_select_conten_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <View
                style="@style/View_line"
                android:layout_marginTop="12dp"
                />

            <TextView
                style="@style/text_view_style"
                android:text="申请人"
                />

            <Spinner
                android:id="@+id/spinner_select_personal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <View
                style="@style/View_line"
                android:layout_marginTop="12dp"
                />

            <TextView
                style="@style/text_view_style"
                android:text="申请内容"
                />

            <TextView
                android:id="@+id/tv_apply_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
