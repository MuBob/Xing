<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_apply_reply"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wjx.xing.activitys.manager.ApplyReplyActivity">

    <include layout="@layout/layout_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_reply_evection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="出差回复"
            android:textSize="18sp"
            android:textColor="@color/text_color"
            android:drawableRight="@drawable/arrow4"
            android:clickable="true"
            android:onClick="onClick"
            />

        <View
            style="@style/View_line"/>
        <TextView
            android:id="@+id/tv_reply_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请假回复"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="@color/text_color"
            android:drawableRight="@drawable/arrow4"
            android:clickable="true"
            android:onClick="onClick"
            />

        <View
            style="@style/View_line"/>

    </LinearLayout>
</LinearLayout>
