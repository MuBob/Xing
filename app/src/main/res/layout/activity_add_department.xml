<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_add_department"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wjx.xing.activitys.manager.AddDepartmentActivity">

    <include layout="@layout/layout_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <View
            style="@style/View_line"
            android:layout_marginTop="12dp"
            />
        <TextView
            style="@style/text_view_style"
            android:text="部门名称"
            />
        <EditText
            android:id="@+id/tv_department_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nextFocusDown="@+id/tv_department_number"
            />
        <View
            style="@style/View_line"
            android:layout_marginTop="12dp"
            />
        <TextView
            style="@style/text_view_style"
            android:text="部门编号"
            />
        <EditText
            android:id="@+id/tv_department_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nextFocusDown="@+id/tv_department_desc"
            />
        <View
            style="@style/View_line"
            android:layout_marginTop="12dp"
            />
        <TextView
            style="@style/text_view_style"
            android:text="部门说明"
            />
        <EditText
            android:id="@+id/tv_department_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="4"
            />

    </LinearLayout>
</LinearLayout>
