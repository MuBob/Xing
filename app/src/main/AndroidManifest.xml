        </activity>
        <activity
            android:name=".activitys.InfoSkillActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity
            android:name=".activitys.InfoSelfActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity
            android:name=".activitys.PasswordManagerActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity
            android:name=".activitys.MoreActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity android:name=".activitys.EveryDayActivity">
        </activity>
        <activity android:name=".activitys.SignInOutActivity">
        </activity>
        <activity android:name=".activitys.manager.DepartmentManagerActivity">
        </activity>
        <activity android:name=".activitys.manager.AddDepartmentActivity">
        </activity>
        <activity android:name=".activitys.manager.PersonalManagerActivity">
